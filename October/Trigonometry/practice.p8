pico-8 cartridge // http://www.pico-8.com
version 29
__lua__
function _init()
	x = 64
	y = 64
	speed = 0
	angle = 0
	
	e_x = 100
	e_y = 100
	e_speed = 1
	e_angle = 0
end
 
function _update()
	if btn(0) then -- left
		angle += 0.01
		x -= 1
	end
	
	if btn(1) then -- right
		angle -= 0.01
		x += 1
	end
	
	if btn(2) then -- up
		y -= 1 
	end
	
	if btn (3) then -- down
		y += 1
	end
	
	-- apply to the x and y for
	-- the player
	x += cos(angle) * speed
	y += sin(angle) * speed
	
	-- calculate the difference
	-- between angles
	dif_x = x - e_x
	dif_y = y - e_y
	
	-- set the enemy angle
	e_angle = atan2(dif_x, dif_y)
	
	-- apply to the x and y for
	-- the enemy
	e_x += cos(e_angle) * e_speed
	e_y += sin(e_angle) * e_speed
	
end

function _draw()	
	cls() -- clear the screen
	spr(1, x, y) -- draw player
	spr(2, e_x, e_y) -- draw enemy
end
